<Window x:Class="Rogers_Toolbox_UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rogers_Toolbox_UI"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800">
    <Grid Background="#FF1A1A1A">
        <Label Content="Settings" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="249,0,249,377" FontSize="36" FontFamily="Arial Rounded MT Bold" Foreground="White"/>
        <TabControl HorizontalAlignment="Center" Margin="0,57,0,36" Width="780" BorderBrush="#FF2E2E2E" Background="#FF171717">
            <TabItem Header="Import" Background="#FF2E2E2E" BorderBrush="#FF383838">
                <StackPanel Background="#FF1E1E1E" Height="322" Margin="10,10,10,10" >
                    <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Width="387" Height="30">
                        <Label Content="Typing Speed:" VerticalAlignment="Center" Foreground="White"/>
                        <TextBox TextWrapping="Wrap" Text="TextBox" Width="150" Margin="118,4,119,4" Background="#FF2E2E2E" Foreground="White" BorderBrush="#FF0C0C0C"/>

                    </Grid>
                    <Grid HorizontalAlignment="Left" Width="387" Height="30" >
                        <Label Content="Blitz Import Speed:" Foreground="White"/>
                        <TextBox TextWrapping="Wrap" Text="TextBox" Width="150" Margin="118,4,119,4" Background="#FF2E2E2E" Foreground="White" BorderBrush="#FF0C0C0C"/>

                    </Grid>
                </StackPanel>
            </TabItem>
            <TabItem Header="Contractor" Background="#FF2E2E2E" BorderBrush="#FF383838">
                <Grid Background="#FF1E1E1E"/>
            </TabItem>

        </TabControl>
        <Button Content="Save" Margin="314,403,314,10" Background="#FF2E2E2E" Foreground="White" BorderBrush="Black"/>

    </Grid>
</Window>
